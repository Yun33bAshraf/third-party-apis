@page "/reset-password"

@using Microsoft.AspNetCore.WebUtilities
@using IApply.Frontend.Models.User.ERPUsers.ResetPassword
@using IApply.Frontend.Services
@using IApply.Frontend.Services.ApiService.System
@using IApply.Frontend.Layout

@layout ForgetPassword

@inject NavigationManager Navigation
@inject ISystemService SystemService
@inject AlertService AlertService
@inject LoadingService LoadingService

<PageTitle>Reset Password</PageTitle>

<div class="page page-center">
    <div class="container container-tight py-4">
        @if (!isSuccess)
        {
            <form class="card card-md" @onsubmit="SubmitResetPassword">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Reset Password</h2>
                    <p class="text-secondary mb-4">Enter your new Password.</p>

                    <div class="mb-3">
                        <label class="form-label">Enter Password</label>
                        <input type="password" class="form-control" placeholder="Enter password" @bind="resetPasswordRequest.Password" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Confirm Password</label>
                        <input type="password" class="form-control" placeholder="Confirm password" @bind="resetPasswordRequest.ConfirmPassword" required />
                    </div>

                    <div class="form-footer">
                        <button type="submit" class="btn custom-btn w-100" disabled="@LoadingService.IsLoading">
                            @if (LoadingService.IsLoading)
                            {
                                <span>Processing...</span>
                            }
                            else
                            {
                                <span>Continue</span>
                            }
                        </button>
                    </div>

                    @if (!string.IsNullOrEmpty(message))
                    {
                        <div class="alert alert-danger text-center mt-3">@message</div>
                    }
                </div>
            </form>
        }
        else
        {
            <div class="alert alert-success text-center">
                <h3>Password Reset Successfully!</h3>
                <p>You can now log in with your new password.</p>
            </div>
        }
    </div>
</div>

@code {
    private ResetPasswordRequest resetPasswordRequest = new();
    private bool isSuccess = false;
    private string message = string.Empty;

    protected override void OnInitialized()
    {
        var uri = Navigation.Uri;
        var queryParams = QueryHelpers.ParseQuery(new Uri(uri).Query);

        if (queryParams.TryGetValue("U", out var userIdValue))
        {
            if (int.TryParse(userIdValue, out int userId))
            {
                resetPasswordRequest.UserId = userId;
            }
            else
            {
                message = "Invalid user ID.";
            }
        }
        else
        {
            message = "User ID is missing in the URL.";
        }
    }

    private async Task SubmitResetPassword()
    {
        try
        {
            if (string.IsNullOrWhiteSpace(resetPasswordRequest.Password) || string.IsNullOrWhiteSpace(resetPasswordRequest.ConfirmPassword))
            {
                message = "Please enter your new password.";
                return;
            }

            if (resetPasswordRequest.Password != resetPasswordRequest.ConfirmPassword)
            {
                message = "Passwords do not match.";
                return;
            }

            LoadingService.Show();

            var response = await SystemService.ResetPassword(resetPasswordRequest.UserId, resetPasswordRequest.Password, resetPasswordRequest.ConfirmPassword);

            if (response != null && response.IsSuccess)
            {
                isSuccess = true; // Show success message
                await Task.Delay(2000); // Wait 2 seconds before redirecting
                Navigation.NavigateTo("/");
                AlertService.Show("Password Reset Successfully.");
            }
            else
            {
                message = "Failed to reset password. Please try again.";
            }
        }
        catch (Exception ex)
        {
            message = ex.Message;
        }
        finally
        {
            LoadingService.Hide();
        }
    }
}
