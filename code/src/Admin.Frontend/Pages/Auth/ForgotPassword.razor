@page "/forgot-password"

@using IApply.Frontend.Models.User.ERPUsers.ForgetPassword
@using IApply.Frontend.Services
@using IApply.Frontend.Services.ApiService.System
@using IApply.Frontend.Models.User.ERPUsers

@layout ForgetPassword

@inject ISystemService SystemService
@inject AlertService AlertService
@inject LoadingService LoadingService

<PageTitle>Forget Password</PageTitle>

<div class="page page-center">
    <div class="container container-tight py-4">
        <form class="card card-md" @onsubmit="SubmitForgetPassword">
            <div class="card-body">
                <h2 class="card-title text-center mb-2 fw-bold">Forgot Password</h2>
                <p class="text-secondary mb-2 fs-4">Enter your email address, and you will receive reset instructions.</p>

                <div class="">
                    <label class="form-label">Email</label>
                    <input type="email" class="form-control" placeholder="Enter email" @bind="forgetPasswordRequest.Email" required />
                </div>

                <div class="form-footer mt-2">
                    @* <button type="submit" class="btn custom-btn w-100" disabled="@LoadingService.IsLoading || string.IsNullOrEmpty(forgetPasswordRequest.Email)"> *@
                    <button type="submit" class="btn btn-primary rounded-5 w-100 mt-2 fw-bold">
                        @if (LoadingService.IsLoading)
                        {
                            <span>Processing...</span>
                        }
                        else
                        {
                            <span>Continue</span>
                        }
                    </button>
                </div>

                @if (!string.IsNullOrEmpty(message))
                {
                    <div class="alert alert-success text-center mt-2">@message</div>
                }
            </div>
        </form>
    </div>
</div>

@code {
    private ForgetPasswordRequest forgetPasswordRequest = new();
    private string message = string.Empty;

    private async Task SubmitForgetPassword()
    {
        try
        {
            if (string.IsNullOrEmpty(forgetPasswordRequest.Email))
            {
                AlertService.ShowError("Please enter your email.");
                return;
            }

            LoadingService.Show(); // Start loading

            var response = await SystemService.ForgetPassword(forgetPasswordRequest.Email);

            if (response != null && response.IsSuccess)
            {
                message = "Password reset instructions have been sent to your email.";
                forgetPasswordRequest.Email = string.Empty; // Clear input after success
            }
            else
            {
                AlertService.ShowError("Failed to send reset instructions. Please check your email.");
            }
        }
        catch (Exception ex)
        {
            AlertService.ShowError(ex.Message);
        }
        finally
        {
            LoadingService.Hide(); // Stop loading
        }
    }
}


