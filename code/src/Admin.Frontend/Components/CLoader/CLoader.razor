@if (Show)
{
    <div class="modal-backdrop d-print-none show t-index"></div>
    <div class="modal modal-blur d-print-none fade show cz-index" style="display: block;" tabindex="-1" role="dialog"
        aria-hidden="true">
        <div class="modal-dialog text-center d-flex justify-content-center align-items-center h-100" role="document">
            <div class="spinner-border c-spinner-grow" style="border-radius: 50%; width: 80px; height: 80px;" role="status">
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public bool Show { get; set; } = false;
    [Parameter] public EventCallback<bool> HandleClose { get; set; }

    private void CloseLoader()
    {
        Show = false;
        HandleClose.InvokeAsync(Show);
    }

    protected override void OnParametersSet()
    {
        StateHasChanged();
    }
}
